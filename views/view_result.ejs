<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="../public/bootstrap.min.css">

</head>
<body>
    
   <div class="d-flex">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark vh-100" style="width: 280px;">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <span class="fs-4">Admin</span>
      </a>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li>
          <a href="/dashboard" class="nav-link text-white">
            Dashboard
          </a>
        </li>
        <li>
          <a href="/add_staff" class="nav-link text-white">
            Add Staff
          </a>
        </li>
        <li>
          <a href="/addstud" class="nav-link text-white">
              Add Student
          </a>
        </li>
        <!-- <li>
          <a href="/addresult" class="nav-link text-white">
            Add Result
          </a>
        </li> -->
        <li>
            <a href="/view_result" class="nav-link text-white active">
              view Result
            </a>
        </li>
        <li>
            <a href="/viewstud" class="nav-link text-white">
              view Student
            </a>
        </li>
        <li>
            <a href="/addstd" class="nav-link text-white">
              Add Standard
            </a>
        </li>
        <li>
            <a href="/adddiv" class="nav-link text-white">
              Add Division
            </a>
        </li>
      </ul>
      <div>
        <a href="/logout" class="text-center text-white d-block btn btn-danger text-decoration-none " >
          Logout
        </a>
      </div>
  </div>


  <div class="d-flex flex-column flex-shrink-0 p-3 vh-100 overflow-auto" style="width: calc(100vw - 280px);">
    <h3>View Result</h3>
    <table class="table table-bordered">
      <thead>
        <th>Id</th>
        <th>Roll No</th>
        <th>Student Name</th>
        <th>Standard</th>
        <th>Division</th>
        <th>Gujarati</th>
        <th>Hindi</th>
        <th>English</th>
        <th>Maths</th>
        <th>Science</th>
        <th>Total</th>
        <th>Average</th>
      </thead>

      <tbody>
            
        <% result.forEach(function(user){%>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.rno %></td>
                <td><%= user.name %></td>
                <td><%= user.std %></td>
                <td><%= user.division %></td>
                <td><%= user.gujarati %></td>
                <td><%= user.hindi %></td>
                <td><%= user.english %></td>
                <td><%= user.maths %></td>
                <td><%= user.science %></td>
                <td><%= user.total %></td>
                <td><%= user.avg %></td>
            </tr>
        <%})%>
      </tbody>
    </table><br><br>
  </div>
</body>
</html>