<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <link rel="stylesheet" href="../public/bootstrap.min.css">

</head>

<body>
  <div class="d-flex">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark vh-100" style="width: 280px;">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <span class="fs-4">Staff</span>
      </a>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li>
          <a href="/staff_dashboard" class="nav-link text-white">
            Dashboard
          </a>
        </li>
        <a href="/staff_result" class="nav-link text-white active">
          Result
        </a>
        </li>
      </ul>
      <div>
        <a href="/staff_logout" class="text-center text-white d-block btn btn-danger text-decoration-none ">
          Logout
        </a>
      </div>
    </div>

    <div class="d-flex flex-column flex-shrink-0 p-3 vh-100 overflow-auto" style="width: calc(100vw - 280px);">
      <form method="post" class="mt-4 p-3 pb-4 px-4 shadow rounded-4">
        <% result.forEach(function(user){%>
          <h1 align="center">Update Result</h1>
          <table align="center">
            <tr>
              <td>Roll No :</td>
              <td><input type="text" name="rno" value="<%= user.rno %>" readonly></td>
            </tr>
            <tr>
              <td>Student Name :</td>
              <td><input type="text" name="name" value="<%= user.name %>" readonly></td>
            </tr>
            <tr>
              <td>Standard :</td>
              <td><input type="text" name="std" value="<%= user.std %>" readonly></td>
            </tr>
            <tr>
              <td>Division :</td>
              <td><input type="text" name="division" value="<%= user.division %>" readonly></td>
            </tr>
            <tr>
              <td>Gujarati :</td>
              <td><input type="text" name="guj" value="<%= user.gujarati %>"></td>
            </tr>
            <tr>
              <td>Hindi :</td>
              <td><input type="text" name="hindi" value="<%= user.hindi %>"></td>
            </tr>
            <tr>
              <td>English :</td>
              <td><input type="text" name="eng" value="<%= user.english %>"></td>
            </tr>
            <tr>
              <td>Maths :</td>
              <td><input type="text" name="maths" value="<%= user.maths %>"></td>
            </tr>
            <tr>
              <td>Science :</td>
              <td><input type="text" name="sci" value="<%= user.science %>"></td>
            </tr>
            <tr>
              <td></td>
              <td><input type="submit" value="update Result"></td>
            </tr>
          </table>
          <%})%>
      </form>
    <!-- </div> -->
  </div>
</body>
</html>